{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "import", "jsx-a11y", "react", "jest"
  ],
  "rules": {
    "react/forbid-prop-types": "off",
    "react/jsx-filename-extension": "off",
    "react/no-unknown-property": [1, { ignore: ["class", "for"] }]
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.dev.js"
      }
    }
  }
}
